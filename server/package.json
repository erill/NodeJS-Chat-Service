    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "babel-jest": "^26.1.0",
    "concurrently": "^4.0.1",
    "jest": "^26.1.0",
    "nock": "^13.0.2",
    "supertest": "^4.0.2"
